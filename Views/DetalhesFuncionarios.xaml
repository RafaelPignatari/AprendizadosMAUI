<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ExemploAplicativo.Views.DetalhesFuncionarios"
             Title="Detalhes Funcionários"
             xmlns:vm="clr-namespace:ExemploAplicativo.ViewModels"
             x:DataType="vm:DetalhesFuncionarioViewModel">
    <TableView Intent="Data">
        <TableSection Title="Informações Básicas">
            <TextCell Text="Id Funcionário" Detail="{Binding Id}" />
            <TextCell Text="Nome" Detail="{Binding Nome}" />
            <EntryCell Label="Nome" Text="{Binding Nome}"/>
            <TextCell Text="Email" Detail="{Binding Email}" />
            <SwitchCell Text="Ativo" On="{Binding Ativo}" />
        </TableSection>
    </TableView>
</ContentPage>